<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         metadata-complete="true" version="4.0">

    <servlet>
        <servlet-name>serviceServlet</servlet-name>
        <servlet-class>com.epam.cinema.servlets.ServiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>serviceServlet</servlet-name>
        <url-pattern>/cinema/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.epam.cinema.filter.CharsetFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

<!--    <filter>-->
<!--        <filter-name>AuthenticFilter</filter-name>-->
<!--        <filter-class>com.epam.cinema.filter.AuthenticFilter</filter-class>-->
<!--    </filter>-->

<!--    <filter-mapping>-->
<!--        <filter-name>AuthenticFilter</filter-name>-->
<!--        <url-pattern>/*</url-pattern>-->
<!--    </filter-mapping>-->

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/cinema</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>